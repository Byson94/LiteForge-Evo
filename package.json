{
    "name": "liteforge-evo",
    "version": "0.1.0",
    "description": "The remake of LiteForge GD engine from scratch.",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder"
    },
    "build": {
      "appId": "com.engine.LiteForgeEvo",
      "productName": "LiteForge Evo",
      "directories": {
        "output": "dist"
      },
      "files": [
        "build/**/*",
        "main.js",
        "package.json"
      ],
      "win": {
        "target": "nsis",
        "icon": "build/icon/icon.ico"
      },
      "mac": {
        "target": "dmg",
        "icon": "build/icon/icon.icns"
      },
      "linux": {
        "target": "AppImage",
        "icon": "build/icon/icon.png"
      }
    },
    "devDependencies": {
      "electron": "^25.0.0",
      "electron-builder": "^24.5.1"
    }
    
  }
  
